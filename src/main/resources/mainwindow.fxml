<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TreeTableColumn?>
<?import javafx.scene.control.TreeTableView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<fx:root maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0" prefWidth="600.0" type="VBox" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <MenuBar>
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#onScanFolder" text="Scan Folder" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Tools">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#onFindDuplicates" text="Find Duplicates" />
                  <MenuItem mnemonicParsing="false" onAction="#onGraphTypeUsage" text="Graph File Type Usage" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <SplitPane dividerPositions="0.5" orientation="VERTICAL" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
         <items>
            <SplitPane dividerPositions="0.5" prefHeight="200.0" prefWidth="200.0">
               <items>
                  <TreeTableView fx:id="ttFileView" maxHeight="1.7976931348623157E308" prefHeight="200.0" prefWidth="200.0">
                    <columns>
                      <TreeTableColumn fx:id="ttcName" prefWidth="75.0" text="Name" />
                      <TreeTableColumn fx:id="ttcSize" prefWidth="75.0" text="Size" />
                    </columns>
                  </TreeTableView>
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <Label text="File Type Legend" />
                        <TableView fx:id="tblStats" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                          <columns>
                            <TableColumn fx:id="tcType" prefWidth="75.0" text="Type" />
                            <TableColumn fx:id="tcSize" prefWidth="75.0" text="Size" />
                              <TableColumn fx:id="tcCount" prefWidth="75.0" text="Count" />
                          </columns>
                        </TableView>
                     </children>
                  </VBox>
               </items>
            </SplitPane>
            <Pane fx:id="pUsageView" prefHeight="200.0" prefWidth="200.0" />
         </items>
      </SplitPane>
      <Label fx:id="lStatus" text="Status Label" />
   </children>
</fx:root>
